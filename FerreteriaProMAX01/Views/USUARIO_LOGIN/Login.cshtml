@model FerreteriaProMAX01.Models.USUARIO_LOGIN
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class=" centr col-lg-2">
        <div class="logi">
            <h4>Inicio de Sesión</h4>
            <div class="form-group">
                @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = " col-md-2" })
                @*<div class="col-md-10">*@
                @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = " col-md-2" })
                @*<div class="col-md-10">*@
                @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


